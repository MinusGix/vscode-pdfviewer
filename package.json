{
  "name": "lattice",
  "displayName": "Lattice",
  "description": "A note-taking helper. PDF-viewer, links, archiving, quotations, and more.",
  "version": "1.0.0",
  "publisher": "minusgix",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "pdf",
    "viewer",
    "note-taking",
    "links",
    "archiving",
    "quotations"
  ],
  "icon": "lattice.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/minusgix/lattice.git"
  },
  "bugs": {
    "url": "https://github.com/minusgix/lattice/issues"
  },
  "activationEvents": [
    "onCustomEditor:lattice.preview",
    "onCustomEditor:lattice.webPreview"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      }
    },
    "customEditors": [
      {
        "viewType": "lattice.preview",
        "displayName": "Lattice Preview",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ]
      },
      {
        "viewType": "lattice.webPreview",
        "displayName": "Lattice Web Preview",
        "selector": [
          {
            "filenamePattern": "*.url"
          }
        ]
      }
    ],
    "menus": {
      "webview/context": [
        {
          "command": "lattice.preview.insertQuotation",
          "when": "webviewId == 'lattice.preview'",
          "group": "navigation"
        },
        {
          "command": "lattice.webPreview.copy",
          "when": "webviewId == 'lattice.webPreview'",
          "group": "navigation"
        },
        {
          "command": "lattice.webPreview.insertQuotation",
          "when": "webviewId == 'lattice.webPreview'",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "lattice.preview.noteTransfer",
        "title": "Transfer Note to Editor Split",
        "category": "Lattice"
      },
      {
        "command": "lattice.preview.highlight",
        "title": "Highlight Selection",
        "category": "Lattice"
      },
      {
        "command": "lattice.preview.insertQuotation",
        "title": "Insert PDF Quotation",
        "category": "Lattice"
      },
      {
        "command": "lattice.webPreview.copy",
        "title": "Copy Selection",
        "category": "Lattice",
        "enablement": "webviewId == 'lattice.webPreview'"
      },
      {
        "command": "lattice.webPreview.insertQuotation",
        "title": "Insert Web Quotation",
        "category": "Lattice"
      },
      {
        "command": "lattice.openUrl",
        "title": "Open URL",
        "category": "Lattice"
      },
      {
        "command": "lattice.webPreview.insertCitation",
        "title": "Insert Citation",
        "category": "Lattice"
      },
      {
        "command": "lattice.preview.insertCitation",
        "title": "Insert Citation",
        "category": "Lattice"
      },
      {
        "command": "lattice.editTitle",
        "title": "Edit Document Title",
        "category": "Lattice",
        "enablement": "activeCustomEditorId == 'lattice.preview' || activeCustomEditorId == 'lattice.webPreview'"
      },
      {
        "command": "lattice.openUrlFrame",
        "title": "Open URL (Frame)",
        "category": "Lattice"
      },
      {
        "command": "lattice.insertCardTemplateTesting",
        "title": "Insert Card (Testing)",
        "category": "Lattice"
      },
      {
        "command": "lattice.insertCardTemplateTestingNoId",
        "title": "Insert Card (Testing, No ID)",
        "category": "Lattice"
      },
      {
        "command": "lattice.reviewCards",
        "title": "Review Due Cards",
        "category": "Lattice"
      },
      {
        "command": "lattice.cardReview.showAnswer",
        "title": "Show Answer",
        "category": "Lattice"
      },
      {
        "command": "lattice.cardReview.rateAgain",
        "title": "Rate Card: Again",
        "category": "Lattice"
      },
      {
        "command": "lattice.cardReview.rateHard",
        "title": "Rate Card: Hard",
        "category": "Lattice"
      },
      {
        "command": "lattice.cardReview.rateGood",
        "title": "Rate Card: Good",
        "category": "Lattice"
      },
      {
        "command": "lattice.cardReview.rateEasy",
        "title": "Rate Card: Easy",
        "category": "Lattice"
      },
      {
        "command": "lattice.listCards",
        "title": "List All Cards",
        "category": "Lattice"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PDF Preview",
      "properties": {
        "lattice-preview.default.pdf.cursor": {
          "markdownDescription": "The default cursor tool for PDF preview.",
          "type": "string",
          "default": "select",
          "enum": [
            "select",
            "hand"
          ]
        },
        "lattice-preview.default.pdf.scale": {
          "markdownDescription": "The default zoom level for PDF preview. Allowed values are `auto`, `page-actual`, `page-fit`, `page-width`, and 1-based scale values. (`1.0` means 100%)",
          "type": "string",
          "default": "auto",
          "pattern": "^(\\d+(?:\\.\\d+)?|auto|page-actual|page-fit|page-width)$"
        },
        "lattice-preview.default.pdf.sidebar": {
          "markdownDescription": "Show the sidebar on load. The default visibility of sidebar for PDF preview.",
          "type": "boolean",
          "default": false
        },
        "lattice-preview.default.pdf.scrollMode": {
          "markdownDescription": "The default scroll mode for PDF preview.",
          "type": "string",
          "default": "vertical",
          "enum": [
            "vertical",
            "horizontal",
            "wrapped"
          ]
        },
        "lattice-preview.default.pdf.spreadMode": {
          "markdownDescription": "The default spread mode for PDF preview.",
          "type": "string",
          "default": "none",
          "enum": [
            "none",
            "odd",
            "even"
          ]
        },
        "lattice-preview.default.includeFileLink": {
          "markdownDescription": "Include a link to the source file when transferring notes.",
          "type": "boolean",
          "default": true
        },
        "lattice.cards.statusBarColorThreshold": {
          "markdownDescription": "Number of due cards that triggers status bar color changes. Set to -1 to disable coloring. When enabled, color changes from green to yellow to red as the number of due cards increases.",
          "type": "number",
          "default": 5
        }
      }
    },
    "keybindings": [
      {
        "command": "lattice.preview.noteTransfer",
        "key": "alt+q",
        "when": "resourceExtname == .pdf"
      },
      {
        "command": "lattice.preview.highlight",
        "key": "ctrl+h",
        "when": "resourceExtname == .pdf"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "vitest",
    "lint": "eslint -c .eslintrc.json --ext .ts ./src",
    "package": "vsce package"
  },
  "dependencies": {
    "@types/vscode": "^1.95.0",
    "lucide-static": "^0.358.0",
    "marked": "^15.0.6",
    "ts-fsrs": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.4",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8",
    "vsce": "^2.15.0",
    "vscode-dts": "^0.3.1",
    "vscode-test": "^1.3.0"
  },
  "extensionKind": [
    "ui"
  ],
  "files": [
    "out/**/*",
    "src/webview/**/*"
  ]
}
